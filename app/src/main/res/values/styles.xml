<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_buttons">
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="main_text">
        <item name="fontFamily">@font/a_lcdnovaobl</item>
        <item name="android:layout_gravity"></item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="character_card_text_main">
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/a_lcdnovaobl</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="character_card_image">
        <item name="android:layout_gravity">start</item>
        <item name="strokeWidth">8dp</item>
        <item name="strokeColor">#FAFF00</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/black</item>
    </style>


    <style name="top_hat_text">
        <item name="fontFamily">@font/caveat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:autofillHints">5</item>
    </style>


    <style name="personal_list_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>