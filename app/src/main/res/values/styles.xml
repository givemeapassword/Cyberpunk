<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_buttons">
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="main_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="character_card_text">
        <item name="maxLines">1</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="character_card_image">
        <item name="android:layout_gravity">start</item>
        <item name="strokeWidth">8dp</item>
        <item name="strokeColor">@color/background_list</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>